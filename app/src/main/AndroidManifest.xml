<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chatapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />




    <application
        android:allowBackup="true"
        android:icon="@drawable/mersal_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.WelcomeActivity"></activity>
        <activity android:name=".Activities.GroupDetailsActivity" />
        <activity android:name=".Activities.AllContacts" />
        <activity android:name=".Activities.SavedMessagesActivity" />
        <activity android:name=".Activities.GroupActivity" />
        <activity android:name=".Activities.GroupDataActivity" />
        <activity android:name=".Activities.SelectGroupMembersActivity" />
        <activity android:name=".Activities.ContactProfileActivity" />
        <activity android:name=".Activities.ChatActivity" />
        <activity android:name=".Activities.MainActivity" />
        <activity android:name=".Activities.VerifyVerificationActivity" />
        <activity android:name=".Activities.RegisterActivity" />
        <activity android:name=".Activities.VerificationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name = ".Notification.FirebaseService"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".Notification.FirebaseMessaging"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>