<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Activities.GroupActivity">

    <EditText
        android:id="@+id/groupMessageEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:hint="@string/type_a_message"
        android:inputType="textMultiLine"
        android:maxHeight="200dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="95dp"
        android:paddingRight="95dp"
        android:paddingBottom="10dp"
        android:textColor="@android:color/white"
        android:textColorHighlight="@color/colorMyMessage"
        android:textColorHint="@android:color/darker_gray" />

    <ImageButton
        android:id="@+id/groupSendButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_send" />
    <ImageButton
        android:id="@+id/groupRecordButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/record" />
    <ImageButton
        android:id="@+id/groupLoadImageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toLeftOf="@id/groupSendButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/attach"
        />
    <ListView
        android:id="@+id/groupMessagesLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/groupMessageEditText"
        android:layout_alignParentTop="true"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll" />
</RelativeLayout>